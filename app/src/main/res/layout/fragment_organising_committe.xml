<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".organising_committee"
    android:background="@color/colorwhite">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/org_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Organising Committee"
        android:textSize="20dp" />

    <Button
        android:id="@+id/org_btn2"
        android:layout_below="@+id/org_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="National Steering Committee"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/org_btn3"
        android:layout_below="@id/org_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="International Advisory Committee"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/org_btn4"
        android:layout_below="@id/org_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="National Advisory Committee"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/org_img1"
        android:layout_below="@id/org_btn4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/new_bseah"
        />


</RelativeLayout>