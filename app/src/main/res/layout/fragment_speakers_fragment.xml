<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".speakers_fragment">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/spk_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPEAKERS"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/spk_img1"
            android:layout_below="@id/spk_tv1"
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            android:src="@drawable/speaker1"/>

        <ImageView
            android:id="@+id/spk_img2"
            android:layout_below="@id/spk_img1"
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            android:src="@drawable/speaker2"/>

        <ImageView
            android:id="@+id/spk_img3"
            android:layout_below="@id/spk_img2"
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            android:src="@drawable/speaker3"/>

        <ImageView
            android:id="@+id/spk_img4"
            android:layout_below="@id/spk_img3"
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            android:src="@drawable/speaker4"/>

        <ImageView
            android:id="@+id/spk_img5"
            android:layout_below="@id/spk_img4"
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            android:src="@drawable/speaker5"/>



    </RelativeLayout>

</ScrollView>

</RelativeLayout>